<% layout('layouts/boilerplate') %>

<!-- MapLibre GL JS CSS -->
<link
  href="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.css"
  rel="stylesheet"
/>

<!-- MapLibre GL JS -->
<script src="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.js"></script>

<script>
    const key = "<%= mapToken %>";
    const listingData = {
    title: "<%= listing.title %>",
    location: "<%= listing.location %>",
    coordinates: <%- JSON.stringify(listing.geometry.coordinates) %>
  };
</script>

<div class="card show-card">
  <div class="row">
    <h3><%= listing.title %></h3>
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing.image"
    /><br />
    <div class="show-body">
      <br />

      <p class="card-text"><b><%= listing.owner.username %></b></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        <%= new Intl.NumberFormat("en-IN", { style: "currency", currency: "INR"
        }).format(listing.price) %>
      </p>
      <p class="card-text"><%= listing.location %>, <%= listing.country %></p>

      <form action="/listing/" method="GET">
        <button type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>

      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
      <div
        class="btn-group edit-delete-btn"
        role="group"
        aria-label="Basic example"
      >
        <form action="/listing/<%= listing._id %>/edit">
          <button type="submit" class="btn btn-primary show-edit-btn">
            Edit
          </button>
        </form>
        <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
          <button type="submit" class="btn btn-dark show-delete-btn">
            Delete
          </button>
        </form>
      </div>
      <% } %>
      <br />

      <div class="col mb-4">
        <hr />
        <% if(currUser) { %>
        <h4>Leave A Review</h4>
        <form
          method="post"
          action="/listing/<%= listing._id %>/reviews"
          novalidate
          class="needs-validation"
        >
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <div class="show-body">
            <label for="comments" class="form-label">Comments</label>
            <textarea
              name="review[comments]"
              id="comment"
              cols="50"
              rows="5"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add some comments for review.
            </div>
          </div>
          <button class="btn btn-outline-dark">submit</button>
        </form>
        <% } %>
        <hr />

        <% if(listing.reviews.length > 0) {%>
        <div class="row">
          <P><B>All Reviews</B></P>
          <% for(review of listing.reviews) {%>
          <div class="card col-5 ms-3 mb-3">
            <div class="card_body">
              <br />
              <h5 class="card_title"><%= review.author.username %></h5>
              <p class="card_text"><%= review.comments %></p>
              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"
              ></p>
              <br />
              <form
                class="mb-3"
                method="post"
                action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete"
              >
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          </div>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <!-- <div class="col-6 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map" style="width: 100%; height: 400px;"></div>
    </div> -->
</div>

