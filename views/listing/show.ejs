<% layout('layouts/boilerplate') %>

<!-- MapLibre GL JS CSS -->
<link
  href="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.css"
  rel="stylesheet"
/>

<!-- MapLibre GL JS -->
<script src="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.js"></script>

<script>
  const key = "<%= mapToken %>";
  const listingData = {
    title: "<%= listing.title %>",
    location: "<%= listing.location %>",
    coordinates: <%- JSON.stringify(listing.geometry.coordinates) %>
  };
</script>

<div class="container my-4 col-9">
  <!-- Listing Title -->
  <h3 class="mb-3 text-center"><%= listing.title %></h3>

  <!-- Listing Image -->
  <div class="text-center mb-3">
    <img
      src="<%= listing.image.url %>"
      class="img-fluid rounded show-img"
      alt="listing.image"
    />
  </div>

  <!-- Listing Details -->
  <div class="card p-3 mb-2">
    <p class="card-text"><b>Owner:</b> <%= listing.owner.username %></p>
    <p class="card-text"><b>Description:</b> <%= listing.description %></p>
    <p class="card-text">
      <b>Price:</b> <%= new Intl.NumberFormat("en-IN", { style: "currency",
      currency: "INR" }).format(listing.price) %>
    </p>
    <p class="card-text">
      <b>Location:</b> <%= listing.location %>, <%= listing.country %>
    </p>

    <!-- Edit/Delete Buttons -->
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="d-flex flex-wrap gap-2 mt-2">
      <form action="/listing/<%= listing._id %>/edit">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
      <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
  </div>

  <!-- Reviews Section -->
  <% if(currUser) { %>
  <div class="card p-3 mb-4">
    <h6>Leave A Review</h6>
    <form
      method="post"
      action="/listing/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <label for="rating" class="form-label"><h4>Rating</h4></label>
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="mb-3">
        <label for="comments" class="form-label">Comments</label>
        <textarea
          name="review[comments]"
          id="comment"
          cols="50"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <% } %>

  <!-- Display Reviews -->
  <% if(listing.reviews.length > 0) { %>
  <div class="mb-4">
    <h6>All Reviews</h6>
    <div class="row row-cols-1 row-cols-md-2 g-3">
      <% for(review of listing.reviews) { %>
      <div class="col">
        <div class="card h-100 p-2">
          <b><p><%= review.author.username %></p></b>
          <p><%= review.comments %></p>
          <p class="starability-result" data-rating="<%= review.rating %>"></p>
          <% if(currUser && review.author._id.equals(currUser._id)) { %>
          <form
            method="post"
            action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete"
          >
            <button class="btn btn-sm btn-dark mt-2">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% } %>

  <!-- Map Section -->
  <div class="card p-3 mb-4">
    <h4 class="mb-2">Where you'll be</h4>
    <div id="map" class="w-100" style="height: 350px"></div>
  </div>
</div>

<script src="/javascript/map.js"></script>

<style>
  /* Listing Image */
  .show-img {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
  }

  @media (max-width: 1200px) {
    .show-img {
      max-height: 400px;
    }
    #map {
      height: 300px !important;
    }
  }

  @media (max-width: 992px) {
    .show-img {
      max-height: 350px;
    }
    #map {
      height: 280px !important;
    }
  }

  @media (max-width: 768px) {
    .show-img {
      max-height: 250px;
    }
    #map {
      height: 250px !important;
    }
    /* fieldset.starability-slot {
      justify-content: space-between;
    } */
  }

  @media (max-width: 576px) {
    .show-img {
      max-height: 180px;
    }
    #map {
      height: 200px !important;
    }
    .card p,
    .card h6,
    .card h5,
    textarea {
      font-size: 0.8rem !important;
    }
    .btn {
      font-size: 0.75rem !important;
      padding: 0.3rem 0.5rem !important;
    }
  }
</style>
