<style>
  /* ---------- Profile Section ---------- */
  .profile-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .profile-header {
    background: linear-gradient(135deg, #fde5ea, #5b5a5a);
    color: white;
    border-radius: 20px;
    padding: 2rem 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .profile-header img {
    border: 4px solid white;
    transition: transform 0.3s ease;
  }

  .profile-header img:hover {
    transform: scale(1.05);
  }

  .profile-header h3 {
    font-weight: 700;
    margin-top: 1rem;
  }

  .profile-header p {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  /* ---------- Listings Section ---------- */
  .listing-card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
  }

  .listing-card img {
    height: 200px;
    object-fit: cover;
  }

  .listing-card .card-body {
    background-color: #fff;
  }

  .listing-card .btn {
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  .listing-card .btn:hover {
    background-color: #ff385c;
    color: #fff;
  }

  /* ---------- Responsive Design ---------- */
  @media (max-width: 768px) {
    .profile-header {
      padding: 1.5rem 1rem;
    }

    .profile-header h3 {
      font-size: 1.5rem;
    }

    .listing-card img {
      height: 180px;
    }
  }
</style>

<% layout('layouts/boilerplate') %>

<div class="container mt-5 profile-container">
  <!-- Profile Header -->
  <div class="text-center mb-5 profile-header">
    <img
      src="/images/icons8-user-default-64.png "
      alt="Profile"
      class="rounded-circle"
      width="120"
      height="120"
    />
    <h3 class="mt-2"><%= user.username %></h3>
    <p><%= user.email %></p>
  </div>

  <!-- User Listings -->
  <h4 class="mb-4 text-center fw-bold text-uppercase">Your Listings</h4>

  <div class="row">
    <% if(listings.length > 0) { %> <% listings.forEach(listing => { %>
    <div class="col-md-4 col-sm-6 mb-4">
      <div class="card listing-card h-100">
        <img
          src="<%= listing.image.url || '/images/no-image.jpg' %>"
          class="card-img-top"
          alt="Listing Image"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text flex-grow-1">
            <%= listing.description.substring(0, 80) %>...
          </p>
          <a
            href="/listing/<%= listing._id %>"
            class="btn btn-outline-dark btn-sm mt-auto"
            >View</a
          >
        </div>
      </div>
    </div>
    <% }) %> <% } else { %>
    <p class="text-center text-muted mt-3">No listings created yet.</p>
    <% } %>
  </div>
</div>
